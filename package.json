{
	"name": "@smithery/deploy-tool",
	"version": "1.0.0",
	"description": "Deploy local MCP servers to Smithery as remote SHTTP servers - available as CLI and MCP server",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./src/server.ts",
	"bin": {
		"smithery-deploy": "./dist/cli.js"
	},
	"scripts": {
		"build": "tsc",
		"dev": "smithery dev",
		"dev:cli": "tsx src/cli.ts",
		"start": "node dist/cli.js",
		"serve": "node dist/main.js"
	},
	"keywords": [
		"smithery",
		"mcp",
		"deploy",
		"shttp",
		"model-context-protocol"
	],
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.25.1",
		"@smithery/sdk": "^3.0.1",
		"chalk": "^5.3.0",
		"commander": "^12.1.0",
		"enquirer": "^2.4.1",
		"glob": "^11.0.0",
		"yaml": "^2.4.5",
		"zod": "^4"
	},
	"devDependencies": {
		"@smithery/cli": "^1.6.7",
		"@types/node": "^22.0.0",
		"tsx": "^4.19.0",
		"typescript": "^5.5.0"
	},
	"peerDependencies": {
		"zod": "^4"
	}
}
